Constant Story "Slow and Steady";
Constant Headline "^by Joshua Wilson^";
Release 0;

Include "vorple.h";
Include "parser.h";
Include "verblib.h";
Include "vorple-multimedia.h";
Include "grammar.h";

Object room "A Slow, Boring Room"
  with
    description "You are in an exceedingly quiet room.  You can hear your heart beating.  =!;Thump-thump.  =!;Thump-thump.  =!;Thump-thump.",
  has light;

[ Initialise;
  location = room;
  VorpleInitialise();
];
